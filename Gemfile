source 'https://rubygems.org'

# Web Server
group :web do 
  gem 'sinatra'
  gem 'haml'
end

# ActiveRecord DB ORM
group :db do
  gem 'mysql2', platform: :ruby
  gem 'activerecord-jdbcmysql-adapter', platform: :jruby
  gem 'activerecord'
  gem 'sinatra-activerecord'
end

# Email
group :email do 
  gem 'pony'
  gem 'houston'
end

# Testing
group :test do 
  gem 'rspec'
  gem 'steak'
  gem 'capybara'
  gem 'factory_girl'
  gem 'database_cleaner'
end